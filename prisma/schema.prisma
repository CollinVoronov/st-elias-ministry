generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  ADMIN
  ORGANIZER
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
}

enum RSVPStatus {
  CONFIRMED
  WAITLISTED
  CANCELLED
}

enum IdeaStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  IN_PLANNING
  DECLINED
}

// ============================================
// AUTH — Organizers/Admins only
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  role          UserRole  @default(ORGANIZER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  events        Event[]          @relation("EventOrganizer")
  announcements Announcement[]   @relation("AnnouncementAuthor")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// PUBLIC VOLUNTEERS — no login required
// ============================================

model Volunteer {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  createdAt DateTime @default(now())

  rsvps     EventRSVP[]
  hours     VolunteerHours[]

  @@map("volunteers")
}

// ============================================
// EVENTS
// ============================================

model Event {
  id            String      @id @default(cuid())
  title         String
  description   String
  date          DateTime
  endDate       DateTime?
  location      String
  address       String?
  status        EventStatus @default(DRAFT)
  maxVolunteers Int?
  whatToBring   String[]
  imageUrl      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  organizerId   String
  organizer     User        @relation("EventOrganizer", fields: [organizerId], references: [id])
  ministryId    String?
  ministry      Ministry?   @relation(fields: [ministryId], references: [id])

  roles         EventRole[]
  rsvps         EventRSVP[]
  checklist     ChecklistItem[]
  resources     ResourceNeed[]
  hours         VolunteerHours[]
  comments      Comment[]
  photos        EventPhoto[]

  @@map("events")
}

model EventRole {
  id          String @id @default(cuid())
  name        String
  description String?
  spotsNeeded Int    @default(1)

  eventId String
  event   Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  rsvps   EventRSVP[]

  @@map("event_roles")
}

model EventRSVP {
  id        String     @id @default(cuid())
  status    RSVPStatus @default(CONFIRMED)
  note      String?
  createdAt DateTime   @default(now())

  volunteerId String
  volunteer   Volunteer  @relation(fields: [volunteerId], references: [id])
  eventId     String
  event       Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  roleId      String?
  role        EventRole? @relation(fields: [roleId], references: [id])

  @@unique([volunteerId, eventId])
  @@map("event_rsvps")
}

// ============================================
// PLANNING TOOLS
// ============================================

model ChecklistItem {
  id          String  @id @default(cuid())
  text        String
  isCompleted Boolean @default(false)
  order       Int     @default(0)

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("checklist_items")
}

model ResourceNeed {
  id          String  @id @default(cuid())
  name        String
  quantity    Int     @default(1)
  isFulfilled Boolean @default(false)
  fulfilledBy String?
  notes       String?

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("resource_needs")
}

// ============================================
// IDEA BOARD
// ============================================

model Idea {
  id            String     @id @default(cuid())
  title         String
  description   String
  submitterName String
  submitterEmail String
  status        IdeaStatus @default(SUBMITTED)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  votes    IdeaVote[]
  comments Comment[]

  @@map("ideas")
}

model IdeaVote {
  id         String   @id @default(cuid())
  voterEmail String
  createdAt  DateTime @default(now())

  ideaId String
  idea   Idea   @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@unique([voterEmail, ideaId])
  @@map("idea_votes")
}

// ============================================
// COMMENTS — polymorphic (event or idea)
// ============================================

model Comment {
  id         String   @id @default(cuid())
  body       String
  authorName String
  authorEmail String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  eventId  String?
  event    Event?   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ideaId   String?
  idea     Idea?    @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies  Comment[] @relation("CommentReplies")

  @@map("comments")
}

// ============================================
// COMMUNITY
// ============================================

model Ministry {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  color       String?

  events Event[]

  @@map("ministries")
}

model Announcement {
  id          String    @id @default(cuid())
  title       String
  body        String
  isPinned    Boolean   @default(false)
  publishedAt DateTime  @default(now())
  expiresAt   DateTime?

  authorId String
  author   User   @relation("AnnouncementAuthor", fields: [authorId], references: [id])

  @@map("announcements")
}

// ============================================
// IMPACT TRACKING
// ============================================

model VolunteerHours {
  id         String  @id @default(cuid())
  hours      Float
  isVerified Boolean @default(false)
  notes      String?
  loggedAt   DateTime @default(now())

  volunteerId String
  volunteer   Volunteer @relation(fields: [volunteerId], references: [id])
  eventId     String
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([volunteerId, eventId])
  @@map("volunteer_hours")
}

model EventPhoto {
  id         String   @id @default(cuid())
  url        String
  caption    String?
  uploadedAt DateTime @default(now())

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("event_photos")
}
